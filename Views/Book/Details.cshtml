@model Abrar_Bookstore.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details - @Model.BookTitle - Book</h1>

<div>
    <h4 class="text-center">Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookGenre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookGenre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImgeURL)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImgeURL" alt="Book Image" class="img-fluid rounded-circle w-12" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-outline-info float-right">Update</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
