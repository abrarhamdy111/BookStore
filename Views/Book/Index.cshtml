@model IEnumerable<Abrar_Bookstore.Models.Book>

@{
    ViewData["Title"] = "Book";
    string sortOrder = ViewData["SortOrder"] as string;
}

<div class="container">
    <div class="row">
        <div class="col-md-9 offset-md-2">
            <div class="mb-3">
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Sort Books
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="price_asc">Sort by Price (Ascending)</a></li>
                        <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="price_desc">Sort by Price (Descending)</a></li>
                        <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="date_asc">Sort by Date (Ascending)</a></li>
                        <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="date_desc">Sort by Date (Descending)</a></li>
                        <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="title_asc">Sort by Title (Ascending)</a></li>
                        <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="title_desc">Sort by Title (Descending)</a></li>
                    </ul>
                </div>
            </div>
            <div class="mb-3">
                <a class="btn btn-outline-success" asp-action="Create">
                    <i class="fas fa-plus mr-2"></i> Create New Book
                </a>
            </div>
            <table class="table table-striped table-hover " style="width:105%" >
                <thead>
                    <tr>
                        <th>Book Title</th>
                        <th>Book Genre</th>
                        <th>Book Price</th>
                        <th>Image</th>
                        <th>Publication Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.BookTitle</td>
                            <td>@book.BookGenre</td>
                            <td>@book.BookPrice.ToString("C")</td>
                            <td>
                                <img src="@book.ImgeURL" class="rounded-circle w-28" alt="@book.BookTitle" style="width: 100px; height: auto;" />
                            </td>
                            <td>@book.PublicationDate.ToString("d")</td>
                            <td>
                                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@book.BookId">
                                    <i class="fas fa-pencil-alt mr-2"></i> Edit
                                </a>
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@book.BookId">
                                    <i class="fas fa-eye mr-2"></i> Details
                                </a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@book.BookId" onclick="return confirm('Are you sure you want to delete this book?')">
                                    <i class="fas fa-trash mr-2"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
