@model IEnumerable<Author>
@{
    ViewData["Title"] = "Author";
}

<div class="container">
    <div class="row">
        <div class="col-md-9 offset-md-2">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Author Name</th>
                        <th>Author Bio</th>
                        <th>Date Of Birth</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td>@author.AuthorName</td>
                            <td>@author.AuthorBio</td>
                            <td>@author.DateOfBirth.ToString("d")</td>
                            <td>
                                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@author.AuthorId">
                                    <i class="fas fa-pencil-alt mr-2"></i> Edit
                                </a>
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@author.AuthorId">
                                    <i class="fas fa-eye mr-2"></i> Details
                                </a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@author.AuthorId" onclick="return confirm('Are you sure you want to delete this author?')">
                                    <i class="fas fa-trash mr-2"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-white" style="position:fixed;right:170px;bottom:200px;">
        <a asp-controller="Author" asp-action="Create" class="btn btn-outline-success"> <i class="fas fa-regular fa-circle-plus mr-2 mr-5"></i> Create</a>
    </div>
</div>

